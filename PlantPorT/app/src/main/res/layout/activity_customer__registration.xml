<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="130dp"
        android:layout_marginStart="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/Text_color"
        android:fontFamily="@font/montserrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up" />


    <ScrollView
        android:background="@drawable/custom_outline"
        android:layout_width="330.0dip"
        android:layout_height="400.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/first_name"
                android:layout_width="300.0dip"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_input"
                android:fontFamily="@font/montserrat"
                android:gravity="center|left"
                android:hint="Name"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_baseline_person_24" />

            <EditText
                android:layout_height="50dp"
                android:id="@+id/txtphn_customer"
                android:layout_width="300.0dip"
                android:textSize="12sp"
                android:layout_marginStart="15dp"
                android:gravity="center|left"
                android:background="@drawable/custom_input"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/montserrat"
                android:hint="Email"
                app:drawableStartCompat="@drawable/ic_baseline_email_24" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                app:passwordToggleEnabled="true"
                android:layout_height="wrap_content">

            <EditText
                android:layout_height="50dp"
                android:id="@+id/txt_pwd"
                android:layout_width="300.0dip"
                android:textSize="12sp"
                android:gravity="center|left"
                android:background="@drawable/custom_input"
                app:passwordToggleEnabled="true"
                android:fontFamily="@font/montserrat"
                android:hint="Password"
                app:drawableStartCompat="@drawable/ic_baseline_lock_24" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
               >

                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccode"
                    android:background="@drawable/custom_input"
                    android:layout_width="120.0dip"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp" />


                <EditText
                    android:id="@+id/text_phn"
                    android:layout_width="match_parent"
                    android:layout_height="47.0dip"
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center|left"
                    android:background="@drawable/custom_input"
                    android:password="false"
                    android:inputType="numberPassword"
                    android:ems="10"
                    android:fontFamily="@font/montserrat"
                    android:hint="Phone"
                    app:drawableStartCompat="@drawable/ic_phone" />


            </LinearLayout>

            <Button
                android:id="@+id/btnreg_customer"
                android:background="@drawable/background_shape"
                android:layout_width="180.0dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5.0dip"
                android:text="Sign Up"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:backgroundTint="@color/official_color" />

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#ff050505"
                android:id="@+id/loginhere"
                android:layout_width="fill_parent"
                android:layout_height="32.0dip"
                android:text="Alreday Registerd?Login Here"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="50.0dip" />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    </LinearLayout>