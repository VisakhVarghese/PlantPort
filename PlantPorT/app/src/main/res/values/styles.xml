<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#57F414</item>
        <item name="colorPrimaryDark">#57F414</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="textSize">20sp</item>

    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light" />

<!--    Rating Dialog-->

    <style name="RatingDialogButton" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/RatingButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/RatingButtonStyle</item>
    </style>

    <style name="RatingButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#57F414</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="RatingDialogFadeAnim" >
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>