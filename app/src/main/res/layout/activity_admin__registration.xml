<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="130dp"
        android:layout_marginStart="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/Text_color"
            android:fontFamily="@font/montserrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up" />


        <ScrollView
            android:background="@drawable/custom_outline"
            android:layout_width="330.0dip"
            android:layout_height="400.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/admin_name"
                    android:layout_width="300.0dip"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/custom_input"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center|left"
                    android:hint="Name"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/ic_baseline_person_24" />

                <EditText
                    android:layout_height="50dp"
                    android:id="@+id/admin_email"
                    android:layout_width="300.0dip"
                    android:textSize="12sp"
                    android:layout_marginStart="15dp"
                    android:gravity="center|left"
                    android:background="@drawable/custom_input"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Email"
                    app:drawableStartCompat="@drawable/ic_baseline_email_24" />

                <EditText
                    android:layout_height="50dp"
                    android:id="@+id/admin_rpwd"
                    android:layout_width="300.0dip"
                    android:textSize="12sp"
                    android:layout_marginStart="15dp"
                    android:gravity="center|left"
                    android:background="@drawable/custom_input"
                    android:layout_marginTop="30dp"
                    app:passwordToggleEnabled="true"
                    android:password="false"
                    android:fontFamily="@font/montserrat"
                    android:hint="Password"
                    app:drawableStartCompat="@drawable/ic_baseline_lock_24" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    >

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/admin_ccp"
                        android:background="@drawable/custom_input"
                        android:layout_width="120.0dip"
                        android:layout_height="50.0dip"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp" />

                    <EditText
                        android:id="@+id/admin_rphone"
                        android:layout_width="match_parent"
                        android:layout_height="47.0dip"
                        android:textSize="12sp"
                        android:inputType="numberPassword"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="5dp"
                        android:gravity="center|left"
                        android:background="@drawable/custom_input"
                        app:passwordToggleEnabled="true"
                        android:password="false"
                        android:fontFamily="@font/montserrat"
                        android:hint="Phone"
                        app:drawableStartCompat="@drawable/ic_baseline_lock_24" />

                </LinearLayout>

                <Button
                    android:id="@+id/admin_rsigup"
                    android:background="@drawable/background_shape"
                    android:layout_width="180.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginBottom="5.0dip"
                    android:layout_gravity="center"
                    android:text="REGISTER"
                    android:backgroundTint="@color/official_color" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TableRow
                        android:id="@+id/tr"
                        android:background="@color/Text_color"
                        android:padding="5.0dip"
                        android:layout_width="100.0dip"
                        android:layout_height="1.0dip"
                        android:layout_marginTop="20.0dip"
                        android:layout_marginStart="40dp" />

                    <TextView
                        android:textColor="@color/Text_color"
                        android:id="@+id/or_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10.0dip"
                        android:text="OR"
                        android:fontFamily="@font/futura_heavy_font"
                        android:layout_marginStart="10.0dip"
                        android:layout_marginEnd="10.0dip" />

                    <TableRow
                        android:id="@+id/tr1"
                        android:background="@color/Text_color"
                        android:layout_width="100.0dip"
                        android:layout_height="1.0dip"
                        android:layout_marginTop="20.0dip" />

                </LinearLayout>

                <Button
                    android:id="@+id/admin_rsigin"
                    android:background="@drawable/background_shape"
                    android:layout_width="180.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="SIGN IN"
                    android:fontFamily="@font/futura_heavy_font"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/official_color" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
