<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sign In"
            android:textSize="40sp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/Text_color"
            />



        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/custom_outline"
            android:layout_width="fill_parent"
            android:layout_height="380dp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="30.0dip"
            android:layout_marginEnd="30.0dip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:layout_width="300.0dip"
                android:id="@+id/admin_phn"
                android:hint="Phone"
                android:textSize="12sp"
                android:inputType="number"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_phone"
                android:layout_height="50dp"/>

            <EditText
                android:layout_width="300.0dip"
                android:id="@+id/admin_pwd"
                android:layout_marginTop="25dp"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/custom_input"
                android:hint="Password"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:layout_height="50dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:textSize="15.0sp"
                    android:textColor="#ff0b0808"
                    android:id="@+id/admin_signin"
                    android:background="@drawable/white_boarder"
                    android:layout_width="140.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:text="SIGN IN"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginEnd="10.0dip"
                    android:backgroundTint="@color/official_color" />

                <Button
                    android:textSize="15.0sp"
                    android:textColor="#ff0b0808"
                    android:id="@+id/admin_signup"
                    android:background="@drawable/white_boarder"
                    android:layout_width="140.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip"
                    android:text="SIGN UP"
                    android:fontFamily="@font/montserrat"
                    android:backgroundTint="@color/official_color" />

            </LinearLayout>

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:id="@+id/admin_fpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password"
                android:fontFamily="@font/montserrat" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>