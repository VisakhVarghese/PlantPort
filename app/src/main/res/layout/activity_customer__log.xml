    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="130dp"
        android:layout_height="match_parent">

    <EditText
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:fontFamily="@font/montserrat"
        android:layout_marginStart="45.0dip"
        android:autofillHints="" />

    </RelativeLayout>


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/custom_outline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30.0dip"
        android:layout_marginEnd="30.0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:layout_height="50dp"
            android:id="@+id/txt_email_customer"
            android:layout_width="300.0dip"
            android:textSize="12sp"
            android:gravity="center|left"
            android:background="@drawable/custom_input"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:hint="Email"
            app:drawableStartCompat="@drawable/ic_baseline_email_24" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            app:passwordToggleEnabled="true"
            android:layout_height="wrap_content">

        <EditText
            android:layout_height="50dp"
            android:textSize="12sp"
            android:id="@+id/txt_pwd_customer"
            android:layout_width="300.0dip"
            android:gravity="center|left"
            android:background="@drawable/custom_input"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:hint="Password"
            app:drawableStartCompat="@drawable/ic_baseline_lock_24" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginStart="20sp"
            android:orientation="horizontal">
        <Button
            android:textSize="15.0sp"
            android:textColor="#ff0b0808"
            android:layout_gravity="center"
            android:id="@+id/btnlogin_owner"
            android:background="@drawable/white_boarder"
            android:layout_width="140dip"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:fontFamily="@font/montserrat"
            android:backgroundTint="@color/official_color" />

            <Button
                android:textSize="15.0sp"
                android:textColor="#ff0b0808"
                android:id="@+id/btnlogin_phone"
                android:layout_marginStart="20sp"
                android:background="@drawable/white_boarder"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Phone"
                android:fontFamily="@font/montserrat"
                android:backgroundTint="@color/official_color" />
        </LinearLayout>
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:id="@+id/txtvpwd_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="Forgot Password"
            android:fontFamily="@font/montserrat
" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@id/tr"
                android:background="@color/Text_color"
                android:padding="5.0dip"
                android:layout_width="135.0dip"
                android:layout_height="1.0dip"
                android:layout_marginTop="10.0dip" />

            <TextView
                android:textColor="@color/Text_color"
                android:id="@id/or_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:fontFamily="@font/futura_heavy_font"
                android:layout_marginStart="10.0dip"
                android:layout_marginEnd="10.0dip" />

            <TableRow
                android:id="@id/tr1"
                android:background="@color/Text_color"
                android:layout_width="135.0dip"
                android:layout_height="1.0dip"
                android:layout_marginTop="10.0dip" />

        </LinearLayout>

        <Button
            android:textSize="15.0sp"
            android:textColor="#ff0b0808"
            android:id="@id/btnreg_owner"
            android:background="@drawable/white_boarder"
            android:layout_width="180.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:text="Sign Up"
            android:onClick="Register"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/official_color" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>